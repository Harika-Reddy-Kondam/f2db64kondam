extends layout
block content
  h1= title
  - let novels = results
  div(class="container-fluid mt-3")
  div(class="row")
    each novel ,index in novels
        div(class="col-sm-2" onclick=`buy(${index})`)  #{novel.novelName} -  #{novel.novelCost} - #{novel.novelAuthor}
  
    script.
      function buy(itemNo)
        {
          alert(`You purchased Item ${itemNo+1}`)
        }     